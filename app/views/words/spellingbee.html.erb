


<div class="container">
  <br>
  <h1>Add a New Words to the Spelling Bee List</h1>

  <%= render 'spellingbeeform', word: @word %>


  <br>

  <h2>Or, upload words with a .csv file.</h2>
   <%= form_tag import_words_path, multipart: true do %>
      <%= file_field_tag :file %>
      <br>
      <%= submit_tag "Import CSV" %>
    <% end %>
  <br>
<hr>
<h1>The Spelling Bee Words</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Word</th>
        <th colspan="2">Action</th>
      </tr>
      <% @spellingbeewords.each do |word| %>
      <tr>
        <td><%= link_to word.letters, word_path(word) %></td>
        <td><%= link_to "Edit", edit_word_path(word), class: "btn btn-outline-danger" %></td>
        <td><%= link_to "Delete", word_path(word), class: "btn btn-outline-danger",
                      method: :delete,
                      data: { confirm: 'Are you sure?' }  %></td>
      </tr>
      <% end %>
    </thead>
  </table>
  <br>
</div>
