
<div class="article">
  <table>
    <thead>
      <tr>
        <th>Word</th>
        <th>Week of</th>
        <th>Action</th>
      </tr>
      <% @words.each do |word| %>
      <tr>
        <td><%= link_to word.letters, word_path(word) %></td>
        <td><%= word.week.start_date.strftime('%B %d, %Y') %></td>
        <td><%= link_to "Edit", edit_word_path(word), class: "btn black" %></td>
        <td><%= link_to "Delete", word_path(word), class: "btn black",
                      method: :delete,
                      data: { confirm: 'Are you sure?' }  %></td>
      </tr>
      <% end %>
    </thead>
  </table>
  <br>
  <%= link_to "Add Words", new_word_path, class: "btn black" %>
</div>
